generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Application {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @map("created_at") @default(now())
  lastUpdated     DateTime        @map("last_updated") @default(now())
  employer        String?
  title           String?
  recruitingCo    String?         @map("recruiting_co")
  recruiter       String?
  status          Status          @default(APPLIED)
  employmentType  EmploymentType? @map("employment_type")
  locationType    LocationType?   @map("location_type")
  location        String?
  compStart       Float?          @map("comp_start")
  compEnd         Float?          @map("comp_end")
  compType        CompType?       @map("comp_type")
  keySkills       String?         @map("key_skills")
  yoe             String?
  notes           String?
  searchSource    SearchSource?   @map("search_source")
  resume          ResumeVersion?
  events          Event[]

  @@map("applications")
}

model Event {
  id            Int             @id @default(autoincrement())
  createdAt     DateTime        @map("created_at") @default(now())
  applicationId Int             @map("application_id")
  application   Application     @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  type          EventType       @default(APPLICATION)
  interviewType InterviewType?  @map("interview_type")
  notes         String?

  @@map("events")
}

enum EmploymentType {
  FTE
  CONTRACT
}

enum LocationType {
  ONSITE
  REMOTE
  HYBRID
}

enum CompType {
  YEARLY
  HOURLY
}

enum Status {
  RECRUITER_CONVO
  RECRUITER_SUBMIT
  APPLIED
  AUTO_REJECTED
  INTERVIEWING
  OFFERED
  REJECTED
  WITHDRAWN
  ACCEPTED
  CLOSED
  GHOSTED
}

enum EventType {
  APPLICATION
  RECRUITER
  AUTO_REJECTION
  INTERVIEW
  SCHEDULE_REQUEST
  FOLLOW_UP
  FOLLOW_UP_SELF
  OFFER
  REJECTION
  WITHDRAWAL
}

enum InterviewType {
  RECRUITER
  MANAGER
  TECH
  PRODUCT
  LIVE_CODE
  AUTO_CODE
  TAKE_HOME
}

enum SearchSource {
  LINKEDIN
  HIRINGCAFE
  BUILTIN
  INDEED
  RECRUITER
  REFERRAL
  INTERNAL
}

enum ResumeVersion {
  FRONTEND_2
  FULLSTACK_2
  ECOMM_2
  FRONTEND_3
  FULLSTACK_3
  ECOMM_3
}